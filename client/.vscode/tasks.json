{
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
         "--no-color"
    ],
    "tasks": [
		{
			"taskName": "build-all",
			"isBuildCommand": true,
			"showOutput": "always",
            "problemMatcher": "$tsc"
		},
		{
			"taskName": "watch",
			"isBuildCommand": false,
			"showOutput": "silent",
            "problemMatcher": "$tsc"
		}
	]
}