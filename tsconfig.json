{
    "compilerOptions": {
        "module": "es2015",
        "removeComments": false,
        "noEmitOnError": true,
        "declaration": false,
        "sourceMap": false,
        "preserveConstEnums": true,
        "target": "es5",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "outDir": "dist/lib/js/tmp",
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": false,
        "types": [],
        "typeRoots": [],
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ]
    },
    "include": [
        "lib/references.d.ts",
        "lib/parsers/parsers.ts",
        "lib/setup/**/*",
        "lib/jml/**/*",
        "lib/core/utils.ts",
        "lib/core/event-dispatcher.ts",
        "lib/core/user.ts",
        "lib/core/project.ts",
        "lib/core/router.ts",
        "lib/components/split-panel/split-panel.tsx",
        "lib/components/validated-text/validated-text.ts",
        "lib/components/validated-select/validated-select.ts",
        "lib/components/v-form/v-form.tsx",
        "lib/components/login-form/login-form.tsx",
        "lib/components/buttons/buttons.tsx",
        "lib/containers/application/application.tsx",
        "lib/containers/login-widget/login-widget.tsx",
        "lib/main.tsx"
    ],
    "exclude": [
        "lib/definitions/generated/*",
        "lib/definitions/required/**/*"
    ]
}