{
    "compilerOptions": {
        "module": "es2015",
        "removeComments": false,
        "noEmitOnError": true,
        "declaration": false,
        "sourceMap": false,
        "preserveConstEnums": true,
        "target": "es5",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "outDir": "dist/lib/js/tmp",
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": false,
        "types": [],
        "typeRoots": [],
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ]
    },
    "include": [
        "lib/references.d.ts",
        "lib/parsers/parsers.ts",
        "lib/setup/**/*",
        "lib/jml/**/*",
        "lib/core/properties/**/*.ts",
        "lib/core/utils.ts",
        "lib/core/event-dispatcher.ts",
        "lib/core/user.ts",
        "lib/core/project.ts",
        "lib/core/router.ts",
        "lib/components/popup/popup.ts",
        "lib/components/menu/menu.ts",
        "lib/components/search-box/search-box.ts",
        "lib/components/icon-menu/icon-menu.ts",
        "lib/components/group/group.ts",
        "lib/components/split-panel/split-panel.ts",
        "lib/components/attention/attention.ts",
        "lib/components/validated-text/validated-text.ts",
        "lib/components/validated-select/validated-select.ts",
        "lib/components/checkbox/checkbox.ts",
        "lib/components/json-form/json-form.ts",
        "lib/components/login-form/login-form.ts",
        "lib/components/register-form/register-form.ts",
        "lib/components/buttons/buttons.ts",
        "lib/components/resizable/resizable.ts",
        "lib/components/window/window.ts",
        "lib/components/forms/message-box/message-box.ts",
        "lib/components/projects-overview/projects-overview.ts",
        "lib/containers/application/application.tsx",
        "lib/containers/login-widget/login-widget.ts",
        "lib/containers/splash/splash.ts",
        "lib/main.tsx"
    ],
    "exclude": [
        "lib/definitions/generated/*",
        "lib/definitions/required/**/*"
    ]
}