{
    "compilerOptions": {
        "module": "es2015",
        "removeComments": false,
        "noEmitOnError": true,
        "declaration": false,
        "sourceMap": false,
        "preserveConstEnums": true,
        "target": "es6",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "outDir": "dist/lib/js/tmp",
        "noEmitHelpers": true
    },
    "include": [
        "lib/references.d.ts",
        "lib/parsers/parsers.ts",
        "lib/jml/jml.ts",
        "lib/core/user.ts",
        "lib/core/project.ts",
        "lib/components/split-panel/split-panel.tsx",
        "lib/components/v-form/v-form.tsx",
        "lib/components/login-form/login-form.tsx",
        "lib/components/buttons/buttons.tsx",
        "lib/containers/application/application.tsx",
        "lib/containers/login-widget/login-widget.tsx",
        "lib/main.tsx"
    ],
    "exclude": [
        "lib/definitions/generated/*",
        "lib/definitions/required/**/*"
    ]
}