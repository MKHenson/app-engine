doctype html
html(lang="en")
	include ../common-html/head
	body
		.password-reset
			#home
				.top
					.logo
						a(href="https://webinate.net")
							img(src= host+"/views/media/webinate-logo.png")
					.sub-logo
						| Animate your Web
				div
					form( action=host+"/user/reset-password-form", method="post")
						table
							tr
								td
									New Password:
								td
									input(type="password", name="password")
							tr
								td
									label Retype Password:
								td
									input(type="password", name="passwordValidation")
							tr
								td
								td
									input(type="submit", value="Update")
						input(type="hidden", name="user", value=user)
						input(type="hidden", name="tag", value=tag)
				if message != ""
					div(class="error-message")
						= message
	include ../common-html/foot 